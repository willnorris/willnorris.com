{
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.5",
    "prettier-plugin-go-template": "*"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSameLine": true,
    "proseWrap": "preserve",
    "plugins": [
      "prettier-plugin-go-template"
    ],
    "overrides": [
      {
        "files": [
          "layouts/**/*.html"
        ],
        "options": {
          "parser": "go-template"
        }
      }
    ]
  }
}
