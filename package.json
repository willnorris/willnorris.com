{
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "prettier-plugin-go-template": "*",
    "tailwindcss": "^4.1.4"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSameLine": true,
    "proseWrap": "preserve",
    "plugins": [
      "prettier-plugin-go-template"
    ],
    "overrides": [
      {
        "files": [
          "layouts/**/*.html"
        ],
        "options": {
          "parser": "go-template"
        }
      }
    ]
  }
}
